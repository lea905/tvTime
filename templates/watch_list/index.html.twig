{% extends 'base.html.twig' %}

{% block title %}Mes listes{% endblock %}

{% block body %}
    <div style="padding-top: 5%;">
        <div class="container py-4 ">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1 text-light">Mes listes</h1>
                </div>
                <a href="{{ path('app_watch_list_new') }}" class="btn btn-primary">
                    + Nouvelle liste
                </a>
            </div>

            {% if watch_lists is empty %}
                <div class="text-center text-light py-5">
                    <p class="mb-2 small">Tu n’as encore aucune liste.</p>
                    <a href="{{ path('app_watch_list_new') }}" class="btn btn-primary">
                        Créer ma première liste
                    </a>
                </div>
            {% else %}
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
                    {% for watch_list in watch_lists %}
                        <div class="col">
                            <div class="card bg-dark text-light h-100 border-0 shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <h2 class="h5 mb-2 text-truncate">
                                        {{ watch_list.title }}
                                    </h2>
                                    <p class="text-white small mb-3" style="min-height: 3em;">
                                        {{ watch_list.description is empty ? 'Aucune description.' : watch_list.description }}
                                    </p>


                                    <div class="mt-auto d-flex justify-content-between align-items-center">
                                        <a href="{{ path('app_watch_list_show', {id: watch_list.id}) }}"
                                           class="btn btn-primary btn-sm">
                                            Ouvrir
                                        </a>
                                        <a href="{{ path('app_watch_list_edit', {id: watch_list.id}) }}"
                                           class="btn btn-secondary btn-sm">
                                            Modifier
                                        </a>
                                        {{ include('watch_list/_delete_form.html.twig', {watch_list: watch_list}) }}

                                    </div>

                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
            {% if views is not empty %}
                <h2 class="h4 mt-5 mb-3 text-light">Votre historique de visionnage</h2>
                {% for view in views %}
                    <div class="movies-row d-flex flex-row flex-nowrap gap-3 pb-2" style="overflow-x:auto;">
                    {% for movie in view.movieId %}
                        <article class="movie-card card bg-dark text-light" style="min-width: 180px;">
                            <img
                                src="https://image.tmdb.org/t/p/w300{{ movie.picture }}"
                                alt="{{ movie.title }}"
                                class="card-img-top"
                            >

                            <div class="card-body p-2">
                                <h3 class="card-title h6 text-truncate" title="{{ movie.title }}">
                                    {{ movie.title }}
                                </h3>

                                <p class="mb-2 small">
                                    Réalisé le <span
                                        class="badge bg-secondary me-1 mb-1">{{ movie.releaseDate ? movie.releaseDate|date('d/m/Y') : 'Date inconnue' }}</span>
                                </p>

                                <a href="{{ path('app_movie_show', {id: movie.id}) }}"
                                   class="btn btn-sm btn-primary w-100">
                                    Détails
                                </a>
                            </div>
                        </article>
                    {% endfor %}
                    {% for serie in view.seriesId %}
                        <article class="movie-card card bg-dark text-light" style="min-width: 180px;">
                            <img
                                src="https://image.tmdb.org/t/p/w300{{ serie.picture }}"
                                alt="{{ serie.title }}"
                                class="card-img-top"
                            >

                            <div class="card-body p-2">
                                <h3 class="card-title h6 text-truncate" title="{{ serie.title }}">
                                    {{ serie.title }}
                                </h3>

                                <p class="mb-2 small">
                                    Réalisé le <span
                                        class="badge bg-secondary me-1 mb-1">{{ serie.releaseDate ? serie.releaseDate|date('d/m/Y') : 'Date inconnue' }}</span>
                                </p>

                                <a href="{{ path('app_series_show', {id: serie.id}) }}"
                                   class="btn btn-sm btn-primary w-100">
                                    Détails
                                </a>
                            </div>
                        </article>
                    {% endfor %}
                {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}
