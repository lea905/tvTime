{% extends 'base.html.twig' %}

{% block body %}
    <div class="container pt-3">

        <a href="{{ path('app_series_show', {id: idSerie}) }}" class="btn btn-link mb-3 text-decoration-none text-black">
            &larr; Retour à la serie
        </a>

        <section class="mb-4">
            <div class="card bg-dark text-light border-0">
                <div class="row g-0">
                    <div class="col-12 col-md-4 col-lg-3">
                        <img
                                src="https://image.tmdb.org/t/p/w500{{ season.picture }}"
                                alt="{{ season.title }}"
                                class="img-fluid h-100 w-100"
                                style="object-fit: cover;"
                        >
                    </div>
                    <div class="col-12 col-md-8 col-lg-9">
                        <div class="card-body h-100 d-flex flex-column justify-content-center">
                            <h1 class="card-title mb-2">{{ season.title }}</h1>

                            <p class="mb-2 small ">
                                {% if season.episodes|length %} • {{ season.episodes|length }} épisode(s){% endif %}
                            </p>

                            <p class="mt-2 mb-3">
                                {{ season.resume ?: 'Aucun synopsis disponible pour cette saison.' }}
                            </p>

                            <div class="d-flex flex-wrap gap-2">
                                <a href="{{ path('app_series_show', {id: idSerie}) }}" class="btn btn-primary btn-sm">
                                    Revenir sur la série
                                </a>
                                <a href="#" class="btn btn-primary btn-sm">
                                    Ajouter à une liste
                                </a>
                                <a href="#" class="btn btn-outline-light btn-sm">
                                    Marquer comme vue
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {% if season.episodes is defined and season.episodes|length > 0 %}
            <section class="mb-4">
                <h2 class="h5 mb-3">Episodes</h2>

                <div class="list-group">
                    {% for episode in season.episodes %}
                        <div class="list-group-item bg-dark text-light border-secondary mb-2">
                            <div class="d-flex">
                                <div class="flex-shrink-0 me-3">
                                    <h1>{{ episode.number }}</h1>
                                </div>

                                <div class="flex-grow-1 d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <h3 class="h6 mb-0">{{ episode.title }}</h3>
                                        <span
                                                class="badge bg-secondary">{{ episode.releaseDate ? episode.releaseDate|date('Y') : 'Date inconnue' }}
                                        </span>
                                    </div>

                                    <p class="mb-2 small ">
                                        {{ episode.resume
                                        ? (episode.resume|length > 180
                                        ? episode.resume|slice(0, 180) ~ '...'
                                        : episode.resume)
                                        : '' }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>
        {% endif %}

        {% if season.productionCompanies is defined and season.productionCompanies|length > 0 %}
            <section class="mb-4">
                <h2 class="h5 mt-4">Sociétés de production</h2>
                <div class="row row-cols-1 row-cols-md-2 g-3">
                    {% for productionCompanie in season.productionCompanies %}
                        <div class="col">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body d-flex align-items-center">
                                    {% if productionCompanie.logo %}
                                        <img
                                                src="https://image.tmdb.org/t/p/w200{{ productionCompanie.logo }}"
                                                alt="{{ productionCompanie.name }}"
                                                class="me-3"
                                                style="max-height: 60px; width: auto;"
                                        >
                                    {% endif %}
                                    <div>
                                        <h3 class="h6 mb-1">{{ productionCompanie.name }}</h3>
                                        {% if productionCompanie.originCountry %}
                                            <p class="mb-0 small ">
                                                Pays : {{ productionCompanie.originCountry }}
                                            </p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>
        {% endif %}
    </div>
{% endblock %}

