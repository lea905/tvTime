{% extends 'base.html.twig' %}

{% block body %}
    <div style="padding-top: 5%;">
        {% if allMovies is empty %}
            <p>Oups ! Aucune série n'est visible, pour régler ce problème appuyez
                <a href="{{ path('app_movies_synchronisation_api') }}">
                    ici</a>. Ou rafraîchissez la page.</p>
        {% else %}

            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h2 class="h4 m-0">Tout les films</h2>
                </div>

                <div class="movies-row d-flex flex-row flex-nowrap gap-3 pb-2" style="overflow-x:auto;">
                    {% for movie in allMovies %}
                        <article class="movie-card card bg-dark text-light" style="min-width: 180px;">
                            <img itemprop="image"
                                 src="https://image.tmdb.org/t/p/w300{{ movie.picture }}"
                                 alt="{{ movie.title }}"
                                 class="card-img-top"
                            >

                            <div class="card-body p-2">
                                <h3 itemprop="name" class="card-title h6 text-truncate" title="{{ movie.title }}">
                                    {{ movie.title }}
                                </h3>

                                <p class="mb-2 small">
                                    Réalisé le <span itemprop="datePublished"
                                        class="badge bg-secondary me-1 mb-1">{{ movie.releaseDate ? movie.releaseDate|date('d/m/Y') : 'Date inconnue' }}</span>
                                </p>

                                <a href="{{ path('app_movie_show', {id: movie.id}) }}"
                                   class="btn btn-sm btn-primary w-100">
                                    Détails
                                </a>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            </section>

            {% if popular is not empty %}
                <section class="mb-5">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h2 class="h4 m-0">Le public a aimé</h2>
                    </div>

                    <div class="movies-row d-flex flex-row flex-nowrap gap-3 pb-2" style="overflow-x:auto;">
                        {% for movie in popular %}
                            <article class="movie-card card bg-dark text-light" style="min-width: 180px;">
                                <img itemprop="image"
                                     src="https://image.tmdb.org/t/p/w300{{ movie.picture }}"
                                     alt="{{ movie.title }}"
                                     class="card-img-top"
                                >

                                <div class="card-body p-2">
                                    <h3 itemprop="name" class="card-title h6 text-truncate" title="{{ movie.title }}">
                                        {{ movie.title }}
                                    </h3>

                                    <p class="mb-2 small">
