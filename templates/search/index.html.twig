{% extends 'base.html.twig' %}

{% block title %}Résultats de recherche{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5 text-light">
        <h1 class="mb-4">Résultats de recherche pour "{{ query }}"</h1>

        {% if movies is empty and series is empty %}
            <div class="alert alert-info">Aucun résultat trouvé pour votre recherche.</div>
        {% else %}

            {% if movies is not empty %}
                <h2 class="mt-4 mb-3" style="color: #3269A8;">Films</h2>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                    {% for movie in movies %}
                        <div class="col">
                            <div class="card h-100 bg-dark text-light border-0 shadow-lg" style="transition: transform 0.2s;">
                                <a href="{{ path('app_movie_show', {'id': movie.id}) }}" class="text-decoration-none text-light">
                                    {% if movie.picture %}
                                        <img src="https://image.tmdb.org/t/p/w500{{ movie.picture }}" class="card-img-top" alt="{{ movie.title }}">
                                    {% else %}
                                        <div class="d-flex align-items-center justify-content-center bg-secondary" style="height: 400px;">
                                            Pas d'image
                                        </div>
                                    {% endif %}
                                    <div class="card-body">
                                        <h5 class="card-title text-truncate">{{ movie.title }}</h5>
                                        <p class="card-text text-muted small">
                                            {{ movie.releaseDate|date('Y') }}
                                        </p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            {% if series is not empty %}
                <h2 class="mt-5 mb-3" style="color: #3269A8;">Séries</h2>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                    {% for show in series %}
                        <div class="col">
                            <div class="card h-100 bg-dark text-light border-0 shadow-lg" style="transition: transform 0.2s;">
                                <a href="{{ path('app_series_show', {'id': show.id}) }}" class="text-decoration-none text-light">
                                    {% if show.picture %}
                                        <img src="https://image.tmdb.org/t/p/w500{{ show.picture }}" class="card-img-top" alt="{{ show.title }}">
                                    {% else %}
                                        <div class="d-flex align-items-center justify-content-center bg-secondary" style="height: 400px;">
                                            Pas d'image
                                        </div>
                                    {% endif %}
                                    <div class="card-body">
                                        <h5 class="card-title text-truncate">{{ show.title }}</h5>
                                        <p class="card-text text-muted small">
                                            {{ show.releaseDate|date('Y') }}
                                        </p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

        {% endif %}
    </div>
{% endblock %}
