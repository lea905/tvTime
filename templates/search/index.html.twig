{% extends 'base.html.twig' %}

{% block title %}Résultats de recherche{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5 text-light">
        <h1 class="mb-4">Résultats de recherche pour "{{ query }}"</h1>

        {% if movies is empty and series is empty %}
            <div class="alert alert-info">Aucun résultat trouvé pour votre recherche.</div>
        {% else %}

            {% if movies is not empty %}
                <section class="mb-5">

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h2 class="h4 m-0">Films</h2>
                    </div>

                    <div class="movies-row d-flex flex-row flex-nowrap gap-3 pb-2" style="overflow-x:auto;">
                        {% for movie in movies %}
                            <article class="movie-card card bg-dark text-light" style="min-width: 180px;">
                                <img
                                    src="https://image.tmdb.org/t/p/w300{{ movie.picture }}"
                                    alt="{{ movie.title }}"
                                    class="card-img-top"
                                >

                                <div class="card-body p-2">
                                    <h3 class="card-title h6 text-truncate" title="{{ movie.title }}">
                                        {{ movie.title }}
                                    </h3>

                                    <p class="mb-2 small">
                                        Réalisé le <span
                                            class="badge bg-secondary me-1 mb-1">{{ movie.releaseDate ? movie.releaseDate|date('d/m/Y') : 'Date inconnue' }}</span>
                                    </p>

                                    <a href="{{ path('app_movie_show', {id: movie.id}) }}"
                                       class="btn btn-sm btn-primary w-100">
                                        Détails
                                    </a>
                                </div>
                            </article>
                        {% endfor %}
                    </div>
                </section>
            {% endif %}

            {% if series is not empty %}
                <section class="mb-5">

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h2 class="h4 m-0">Séries</h2>
                    </div>

                    <div class="movies-row d-flex flex-row flex-nowrap gap-3 pb-2" style="overflow-x:auto;">
                        {% for serie in series %}
                            <article class="movie-card card bg-dark text-light" style="min-width: 180px;">
                                <img
                                    src="https://image.tmdb.org/t/p/w300{{ serie.picture }}"
                                    alt="{{ serie.title }}"
                                    class="card-img-top"
                                >

                                <div class="card-body p-2">
                                    <h3 class="card-title h6 text-truncate" title="{{ serie.title }}">
                                        {{ serie.title }}
                                    </h3>

                                    <p class="mb-2 small">
                                        Réalisé le <span
                                            class="badge bg-secondary me-1 mb-1">{{ serie.releaseDate ? serie.releaseDate|date('d/m/Y') : 'Date inconnue' }}</span>
                                    </p>

                                    <a href="{{ path('app_series_show', {id: serie.id}) }}"
                                       class="btn btn-sm btn-primary w-100">
                                        Détails
                                    </a>
                                </div>
                            </article>
                        {% endfor %}
                    </div>
                </section>
            {% endif %}

        {% endif %}
    </div>
{% endblock %}
