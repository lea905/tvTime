{% extends 'base.html.twig' %}

{% block body %}
    <h1>SÃ©ries populaires</h1>

    <div class="d-flex flex-wrap gap-3">
        {% for serie in series %}
            <div class="card" style="width: 200px;">
                <img src="https://image.tmdb.org/t/p/w500{{ serie.picture }}" alt="{{ serie.title }}"
                     class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{ serie.title }}</h5>
                    {% for genre in serie.genres %}
                        <p> {{ genre }} </p>
                    {% endfor %}
                    <a href="{{ path('app_series_show', {id: serie.tmdbId }) }}">
                        <p>Voir les details de la serie</p>
                    </a>
                    <p>{{ serie.releaseDate ? serie.releaseDate|date('d/m/Y') : 'Date inconnue' }}</p>
                    <small>{{ serie.resume|length > 100 ? serie.resume|slice(0, 100) ~ '...' : serie.resume }}</small>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
